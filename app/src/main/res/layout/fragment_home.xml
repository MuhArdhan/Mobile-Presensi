<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e7e8">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Card Top Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_card_login"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Isi atas: Dua kolom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Kiri -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_message"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_guest"
                        android:textColor="#333333"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Kanan -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jam Kerja"
                        android:textColor="#333333"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:text="08:00:00 - 17:00:00"
                        android:textColor="#333333"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#CCCCCC" />

            <!-- Container Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:paddingHorizontal="16dp"
                android:weightSum="4">

                <!-- Button Presensi -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/presensiButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_shape"
                        android:backgroundTint="#de382c"
                        android:padding="8dp"
                        android:elevation="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:stateListAnimator="@animator/button_scale"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/absen"
                        android:contentDescription="@string/absen_button_desc"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/presensi"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Button Perizinan -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/perizinanButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_shape"
                        android:backgroundTint="#0ccf9b"
                        android:src="@drawable/izin"
                        android:elevation="8dp"
                        android:padding="9dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:stateListAnimator="@animator/button_scale"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="@string/izin_button_desc"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perizinan"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Button Comming -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/comingSoonButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_shape"
                        android:backgroundTint="#6C63FF"
                        android:src="@drawable/cuti"
                        android:drawablePadding="0dp"
                        android:elevation="8dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:stateListAnimator="@animator/button_scale"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="@string/cuti_button_desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cuti"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Button Riwayat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/riwayatButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_shape"
                        android:backgroundTint="#f59607"
                        android:src="@drawable/history"
                        android:elevation="8dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:stateListAnimator="@animator/button_scale"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="@string/riwayat_button_desc"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/riwayat"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--  Container Masuk Pulang  -->
    <LinearLayout
        android:id="@+id/masukPulangContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Masuk -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_masuk"
            android:padding="20dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absen Masuk"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jamMasuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:02:11"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Pulang -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_keluar"
            android:padding="20dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absen Pulang"
                android:textColor="#0270f5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jamPulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:01:44"
                android:textColor="#0270f5"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <!--  Container Rekap Bulanan  -->
    <LinearLayout
        android:id="@+id/absensiContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_keluar"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/masukPulangContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Judul -->
        <TextView
            android:id="@+id/absensiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absensi Bulan (April)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <!-- Baris item Hadir, Izin, Cuti -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <!-- Item Hadir -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/hadirCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#6C63FF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hadir"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Item Izin -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/izinCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#6C63FF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Izin"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Item Cuti -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/cutiCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#6C63FF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuti"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/logout_button_desc"
        android:scaleType="centerInside"
        android:src="@drawable/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>